<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    android:background="@android:color/white"
    tools:context="com.eric.smartwatchapp1.ControlSmartWatch2"
    tools:ignore="ContentDescription,PxUsage" >

      <Button
          android:id="@+id/button1"
          style="?android:attr/buttonStyleSmall"
          android:layout_width="220px"
          android:layout_height="100px"
          android:textSize="20px"
          android:text="click me"
          android:textColor="@android:color/black"
          
           />
      
     <TextView
         android:id="@+id/now"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/button1"
         android:text="NOW"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:textColor="@style/ExtensionLightTheme"
         android:textSize="15px" />

<TextView
    android:id="@+id/classroom2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:text="Class Room"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textSize="15px" />

<TextView
    android:id="@+id/classroom1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:text="classroom"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textSize="15px" />



<TextView
    android:id="@+id/next"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/now"
    android:layout_alignBottom="@+id/now"
    android:layout_alignLeft="@+id/module2"
    android:text="NEXT"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textSize="15px" />

<TextView
    android:id="@+id/module1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/classroom1"
    android:layout_alignParentLeft="true"
    android:text="Module"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textSize="15px" />

<TextView
    android:id="@+id/module2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/module1"
    android:layout_alignBottom="@+id/module1"
    android:layout_alignLeft="@+id/classroom2"
    android:text="Module"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textSize="15px" />

</RelativeLayout>